{
  "name": "international-quotes-api",
  "version": "0.1.0",
  "description": "API for international quotes obtained from Wikiquote",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "node ./dist/index.js",
    "start:dev": "node --require dotenv/config ./dist/index.js",
    "dev": "nodemon --watch 'src/**/*.ts' --exec npx ts-node --require dotenv/config ./src/index.ts",
    "dev:db": "docker compose --file docker-compose.dev.yml up",
    "lint": "npx eslint --fix ./src --ext src/**/*.ts",
    "doc": "npx typedoc --out ./doc --entryPoints ./src --entryPointStrategy Expand --plugin typedoc-theme-hierarchy --plugin typedoc-plugin-mdn-links --plugin typedoc-plugin-dt-links --excludeExternals --theme hierarchy",
    "pack": "npm run doc && zip xsmahe01.zip doc/ docker/ public/ src/ .env.example docker-compose.yml package.json package-lock.json tsconfig.json README.md"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ceskyDJ/international-quotes.git"
  },
  "keywords": [
    "qoutes",
    "api",
    "wikiquote",
    "wikimedia",
    "international",
    "multilingual"
  ],
  "author": "Michal Å mahel (ceskyDJ)",
  "license": "GPL-3.0",
  "bugs": {
    "url": "https://github.com/ceskyDJ/international-quotes/issues"
  },
  "homepage": "https://github.com/ceskyDJ/international-quotes",
  "dependencies": {
    "body-parser": "^2.2.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "helmet": "^8.1.0",
    "pg": "^8.15.6",
    "pg-hstore": "^2.3.4",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.11.2",
    "sequelize": "^6.37.7",
    "sequelize-typescript": "^2.1.6",
    "typedi": "^0.10.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.15.2",
    "dotenv": "^16.5.0",
    "eslint": "^9.25.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "globals": "^16.0.0",
    "http-errors": "^2.0.0",
    "nodemon": "^3.1.10",
    "prettier": "^3.5.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.3",
    "typedoc-plugin-dt-links": "^2.0.0",
    "typedoc-plugin-mdn-links": "^5.0.1",
    "typedoc-theme-hierarchy": "^6.0.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
